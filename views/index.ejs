<%- include('partials/header.ejs') %>
 

<div class="content">
  <% books.forEach(book => { %>
    <hr class="divider" />
  <div class="book">
    <div class="cover">
        <img class="index-img"
        src="https://covers.openlibrary.org/b/isbn/<%=book.isbn%>-M.jpg"
        alt="Book CoverImage"
        />
    </div>
    <div class="text">
        <div class="title"><a href="/view/<%=book.id %>"> <%= book.title %></a></div>
        <div class="author">by <%=book.author%></div>
        <div class="isbn">ISBN: <%=book.isbn%></div>
        <div class="rank">How strongly i recommend it: 5/<%=book.rating%></div>
        <div class="date">Date read: <%= book.days%></div>
        <div class="note"><%=book.description%>...</div>
    </div>
     <!---- <form action="/view/<%= book.title %>" method="post">
      <input type="hidden" name="bookid" value="<%= book.id %>" >
      <button class="btn view-btn" id="submit" type="submit">View</button>
    </form>-->
  </div>
  <% }); %>
</div>

